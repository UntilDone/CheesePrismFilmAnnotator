<Window x:Class="CheeseFilmAnalystics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheeseFilmAnalystics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Margin="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
                    <Button Content="영화 파일 열기" Command="{Binding OpenMovieCommand}" Margin="0,0,5,0"/>
                    <Button Content="LUT/색감 추출" Command="{Binding ExtractLutCommand}"/>
                </StackPanel>
                <Image Source="{Binding CurrentMovie.ImagePath}" Stretch="Uniform" DockPanel.Dock="Top"
                       Height="300" Margin="5"/>

                <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Bottom">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="추출된 색상 팔레트" FontWeight="Bold" Margin="5"/>
                        <ItemsControl ItemsSource="{Binding CurrentMovie.ExtractedColors}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" Margin="2" Width="80" Height="80">
                                        <StackPanel>
                                            <Rectangle Width="78" Height="50" Fill="{Binding Color}"/>
                                            <TextBlock Text="{Binding HexValue}" HorizontalAlignment="Center" FontSize="10"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="5">
                    <TextBlock Text="감정 태그 관리" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="NewEmotionTagTextBox" Margin="0,0,0,5"
                             Text="{Binding Path=NewEmotionTagName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="감정 태그 추가" Command="{Binding AddEmotionTagCommand}"
                            CommandParameter="{Binding ElementName=NewEmotionTagTextBox, Path=Text}"/>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto" DockPanel.Dock="Bottom">
                    <ItemsControl ItemsSource="{Binding CurrentMovie.EmotionTags}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                        <TextBox Text="{Binding Description}" AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>
                                        <Button Content="삭제" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </DockPanel>
        </Border>
    </Grid>
</Window>
