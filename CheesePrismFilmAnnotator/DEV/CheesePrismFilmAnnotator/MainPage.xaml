<Window x:Class="CheesePrismFilmAnnotator.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="892" Width="460" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent">
    <Border Background="#cfd7dc" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="430"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="195"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Border Width="235" Height="350"   VerticalAlignment="Top" CornerRadius="0 0 115 115">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00E5FF" Offset="0.0"/>
                            <GradientStop Color="#FF0A6C" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>

                </Border>
                <Border Width="208" Height="335" Background="#bfc8cd"  VerticalAlignment="Top" CornerRadius="0 0 100 100">

                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                </Border>
                <Border Width="178" Height="320" VerticalAlignment="Top" CornerRadius="0 0 90 90">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="White" Offset="0.1"/>
                            <GradientStop Color="#bfc8cd" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                </Border>
                <Border  Width="158" Height="308" VerticalAlignment="Top" CornerRadius="0 0 75 75">
                    <Border.Background>
                        <ImageBrush ImageSource="Img/almbum.jpg"/>
                    </Border.Background>
                </Border>
            </Grid>



            <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical">
                <TextBlock Text="2:35" HorizontalAlignment="Center" Foreground="#7528c2" FontSize="17" FontWeight="SemiBold" Margin="0 0 0 20"/>
                <TextBlock Text="IRIS" HorizontalAlignment="Center"  FontSize="25" FontWeight="SemiBold" Margin="0 0 0 0"/>
                <TextBlock Text="Pastel Ghost" HorizontalAlignment="Center" FontSize="20" FontWeight="SemiBold" Margin="0 0 0 0"/>
            </StackPanel>
            <Slider Style="{DynamicResource SliderStyle1}" IsSelectionRangeEnabled="True" Value="3" SelectionEnd="3" VerticalAlignment="Bottom" Margin="0 0 0 10"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Height="90" Width="90" CornerRadius="50" HorizontalAlignment="Center" Margin="0 0 30 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#dbdfe2" Offset="0.0"/>
                            <GradientStop Color="#bfc8cd" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                    <Border Width="85" Height="85" CornerRadius="50" Background="#cfd7dc" >
                        <Image Width="23" Source="Img/back.png" Height="23"/>
                    </Border>
                </Border>





                <Border Height="110" Width="110" CornerRadius="60" HorizontalAlignment="Center" Margin="0 0 0 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#dbdfe2" Offset="0.0"/>
                            <GradientStop Color="#bfc8cd" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                    <Border Width="105" Height="105" CornerRadius="60" Background="#cfd7dc">
                        <Border Width="85" Height="85" VerticalAlignment="Center" HorizontalAlignment="Center"
                                CornerRadius="50" Background="#cfd7dc">
                            <Image Width="53" Source="Img/play.png" Height="53" Stretch="Fill"/>
                        </Border>
                    </Border>
                </Border>

                <Border Height="90" Width="90" CornerRadius="50" HorizontalAlignment="Center" Margin="30 0 0 0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#dbdfe2" Offset="0.0"/>
                            <GradientStop Color="#bfc8cd" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                    </Border.Effect>
                    <Border Width="85" Height="85" CornerRadius="50" Background="#cfd7dc">
                        <Border Width="85" Height="85" CornerRadius="50" Background="#cfd7dc">
                            <Image Width="23" Source="Img/next.png" Height="23"/>
                        </Border>
                    </Border>
                </Border>
            </StackPanel>
            <Border Grid.Row="3" Background="#cfd7dc" CornerRadius="0 0 30 30">
                <Border.Effect>
                    <DropShadowEffect Color="White" Direction="30"  ShadowDepth="15" Opacity="0.4" BlurRadius="20"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Height="7" Width="50" CornerRadius="10" >
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#dbdfe2" Offset="0.0"/>
                                <GradientStop Color="#bfc8cd" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                        </Border.Effect>
                        <Border Background="#d0d8dd" Width="47" Height="5" CornerRadius="10">

                        </Border>
                    </Border>
                    <StackPanel Orientation="Vertical" Grid.Row="1">
                        <Border Grid.Row="1" Height="50" Width="400" VerticalAlignment="Top" >
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#dbdfe2" Offset="0.0"/>
                                    <GradientStop Color="#bfc8cd" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                            </Border.Effect>
                            <Border Height="45" Width="395" Background="#d0d8dd">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Height="35" Width="35">
                                        <Border.Background>
                                            <ImageBrush ImageSource="Img/almbum.jpg" Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Grid.Column="1"  Orientation="Vertical">
                                        <TextBlock Text="IRIS" FontSize="15"/>
                                        <TextBlock Text="Pastel Ghost" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="3:35" Foreground="#7528c2"/>
                                </Grid>
                            </Border>

                        </Border>
                        <Border Grid.Row="1" Height="50" Width="400" Margin="0 10 0 0" >
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#dbdfe2" Offset="0.0"/>
                                    <GradientStop Color="#bfc8cd" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                            </Border.Effect>
                            <Border Height="45" Width="395" Background="#d0d8dd">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Height="35" Width="35">
                                        <Border.Background>
                                            <ImageBrush ImageSource="Img/almbum.jpg" Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Grid.Column="1"  Orientation="Vertical">
                                        <TextBlock Text="IRIS" FontSize="15"/>
                                        <TextBlock Text="Pastel Ghost" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="3:35" Foreground="#7528c2"/>
                                </Grid>
                            </Border>

                        </Border>
                        <Border Grid.Row="1" Height="50" Width="400" Margin="0 10 0 0" >
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#dbdfe2" Offset="0.0"/>
                                    <GradientStop Color="#bfc8cd" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="320"  ShadowDepth="5" Opacity="0.2"/>
                            </Border.Effect>
                            <Border Height="45" Width="395" Background="#d0d8dd">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Height="35" Width="35">
                                        <Border.Background>
                                            <ImageBrush ImageSource="Img/almbum.jpg" Stretch="Fill"/>
                                        </Border.Background>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Grid.Column="1"  Orientation="Vertical">
                                        <TextBlock Text="Eminem" FontSize="15"/>
                                        <TextBlock Text="Lose Yourself" FontSize="12"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Text="2:35" Foreground="#7528c2"/>
                                </Grid>
                            </Border>

                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
